@{
    ViewData["Title"] = "Storage Providers";
}

<!-- Page Header -->
<div class="page-header">
    <div>
        <h1 class="page-title">Storage Providers</h1>
        <p class="page-subtitle">Configure and manage archive storage destinations</p>
    </div>
    <div class="page-actions">
        <button class="btn btn-secondary">
            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"></path>
                <polyline points="22 4 12 14.01 9 11.01"></polyline>
            </svg>
            Test All Connections
        </button>
        <a asp-action="Create" class="btn btn-primary">
            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <line x1="12" y1="5" x2="12" y2="19"></line>
                <line x1="5" y1="12" x2="19" y2="12"></line>
            </svg>
            Add Storage Provider
        </a>
    </div>
</div>

<!-- Stats Cards -->
<div class="stats-grid mb-3">
    <div class="stat-card">
        <div class="stat-header">
            <div class="stat-icon primary">
                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <ellipse cx="12" cy="5" rx="9" ry="3"></ellipse>
                    <path d="M21 12c0 1.66-4 3-9 3s-9-1.34-9-3"></path>
                    <path d="M3 5v14c0 1.66 4 3 9 3s9-1.34 9-3V5"></path>
                </svg>
            </div>
        </div>
        <div class="stat-value">4</div>
        <div class="stat-label">Total Providers</div>
    </div>
    <div class="stat-card">
        <div class="stat-header">
            <div class="stat-icon success">
                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <polyline points="20 6 9 17 4 12"></polyline>
                </svg>
            </div>
        </div>
        <div class="stat-value">4</div>
        <div class="stat-label">Healthy</div>
    </div>
    <div class="stat-card">
        <div class="stat-header">
            <div class="stat-icon info">
                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <ellipse cx="12" cy="5" rx="9" ry="3"></ellipse>
                    <path d="M21 12c0 1.66-4 3-9 3s-9-1.34-9-3"></path>
                    <path d="M3 5v14c0 1.66 4 3 9 3s9-1.34 9-3V5"></path>
                </svg>
            </div>
        </div>
        <div class="stat-value">2.4 TB</div>
        <div class="stat-label">Total Used</div>
    </div>
    <div class="stat-card">
        <div class="stat-header">
            <div class="stat-icon warning">
                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <circle cx="12" cy="12" r="10"></circle>
                    <line x1="12" y1="8" x2="12" y2="12"></line>
                    <line x1="12" y1="16" x2="12.01" y2="16"></line>
                </svg>
            </div>
        </div>
        <div class="stat-value">7.6 TB</div>
        <div class="stat-label">Available</div>
    </div>
</div>

<!-- Storage Providers Grid -->
<div class="grid-2">
    <!-- Local NAS Storage -->
    <div class="card">
        <div class="card-header">
            <div class="d-flex align-items-center gap-2">
                <div class="stat-icon primary" style="width: 36px; height: 36px;">
                    <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <rect x="2" y="2" width="20" height="8" rx="2" ry="2"></rect>
                        <rect x="2" y="14" width="20" height="8" rx="2" ry="2"></rect>
                        <line x1="6" y1="6" x2="6.01" y2="6"></line>
                        <line x1="6" y1="18" x2="6.01" y2="18"></line>
                    </svg>
                </div>
                <div>
                    <h3 class="card-title mb-0">Primary NAS Storage</h3>
                    <span class="fs-xs text-muted">Local Storage</span>
                </div>
            </div>
            <span class="status-badge status-active">Healthy</span>
        </div>
        <div class="card-body">
            <div class="d-flex justify-content-between mb-2">
                <span class="text-secondary fs-sm">Endpoint</span>
                <span class="fw-bold">//nas01.local/archives</span>
            </div>
            <div class="d-flex justify-content-between mb-2">
                <span class="text-secondary fs-sm">Used / Quota</span>
                <span class="fw-bold">960 GB / 2 TB</span>
            </div>
            <div class="progress-bar mb-2">
                <div class="progress-fill" style="width: 48%"></div>
            </div>
            <div class="d-flex justify-content-between mb-2">
                <span class="text-secondary fs-sm">Archive Plans</span>
                <span class="fw-bold">8</span>
            </div>
            <div class="d-flex justify-content-between mb-2">
                <span class="text-secondary fs-sm">Latency</span>
                <span class="text-success fw-bold">2ms</span>
            </div>
            <div class="d-flex justify-content-between">
                <span class="text-secondary fs-sm">Last Check</span>
                <span>2 minutes ago</span>
            </div>
        </div>
        <div class="card-footer d-flex justify-content-between">
            <button class="btn btn-sm btn-outline">Test Connection</button>
            <div class="d-flex gap-1">
                <button class="btn btn-sm btn-outline">Edit</button>
                <button class="btn btn-sm btn-outline">View Details</button>
            </div>
        </div>
    </div>

    <!-- AWS S3 -->
    <div class="card">
        <div class="card-header">
            <div class="d-flex align-items-center gap-2">
                <div class="stat-icon info" style="width: 36px; height: 36px;">
                    <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M21 16V8a2 2 0 0 0-1-1.73l-7-4a2 2 0 0 0-2 0l-7 4A2 2 0 0 0 3 8v8a2 2 0 0 0 1 1.73l7 4a2 2 0 0 0 2 0l7-4A2 2 0 0 0 21 16z"></path>
                    </svg>
                </div>
                <div>
                    <h3 class="card-title mb-0">AWS S3 - us-east-1</h3>
                    <span class="fs-xs text-muted">S3 Compatible</span>
                </div>
            </div>
            <span class="status-badge status-active">Healthy</span>
        </div>
        <div class="card-body">
            <div class="d-flex justify-content-between mb-2">
                <span class="text-secondary fs-sm">Bucket</span>
                <span class="fw-bold">enterprise-archives-prod</span>
            </div>
            <div class="d-flex justify-content-between mb-2">
                <span class="text-secondary fs-sm">Used / Quota</span>
                <span class="fw-bold">840 GB / 5 TB</span>
            </div>
            <div class="progress-bar mb-2">
                <div class="progress-fill" style="width: 17%; background: var(--info-color);"></div>
            </div>
            <div class="d-flex justify-content-between mb-2">
                <span class="text-secondary fs-sm">Archive Plans</span>
                <span class="fw-bold">12</span>
            </div>
            <div class="d-flex justify-content-between mb-2">
                <span class="text-secondary fs-sm">Latency</span>
                <span class="text-success fw-bold">45ms</span>
            </div>
            <div class="d-flex justify-content-between">
                <span class="text-secondary fs-sm">Last Check</span>
                <span>1 minute ago</span>
            </div>
        </div>
        <div class="card-footer d-flex justify-content-between">
            <button class="btn btn-sm btn-outline">Test Connection</button>
            <div class="d-flex gap-1">
                <button class="btn btn-sm btn-outline">Edit</button>
                <button class="btn btn-sm btn-outline">View Details</button>
            </div>
        </div>
    </div>

    <!-- Azure Blob -->
    <div class="card">
        <div class="card-header">
            <div class="d-flex align-items-center gap-2">
                <div class="stat-icon success" style="width: 36px; height: 36px;">
                    <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M18 10h-1.26A8 8 0 1 0 9 20h9a5 5 0 0 0 0-10z"></path>
                    </svg>
                </div>
                <div>
                    <h3 class="card-title mb-0">Azure Blob - West Europe</h3>
                    <span class="fs-xs text-muted">Azure Blob Storage</span>
                </div>
            </div>
            <span class="status-badge status-active">Healthy</span>
        </div>
        <div class="card-body">
            <div class="d-flex justify-content-between mb-2">
                <span class="text-secondary fs-sm">Container</span>
                <span class="fw-bold">enterprise-archives</span>
            </div>
            <div class="d-flex justify-content-between mb-2">
                <span class="text-secondary fs-sm">Used / Quota</span>
                <span class="fw-bold">480 GB / 2 TB</span>
            </div>
            <div class="progress-bar mb-2">
                <div class="progress-fill" style="width: 24%; background: var(--success-color);"></div>
            </div>
            <div class="d-flex justify-content-between mb-2">
                <span class="text-secondary fs-sm">Archive Plans</span>
                <span class="fw-bold">3</span>
            </div>
            <div class="d-flex justify-content-between mb-2">
                <span class="text-secondary fs-sm">Latency</span>
                <span class="text-success fw-bold">62ms</span>
            </div>
            <div class="d-flex justify-content-between">
                <span class="text-secondary fs-sm">Last Check</span>
                <span>3 minutes ago</span>
            </div>
        </div>
        <div class="card-footer d-flex justify-content-between">
            <button class="btn btn-sm btn-outline">Test Connection</button>
            <div class="d-flex gap-1">
                <button class="btn btn-sm btn-outline">Edit</button>
                <button class="btn btn-sm btn-outline">View Details</button>
            </div>
        </div>
    </div>

    <!-- Tape Archive -->
    <div class="card">
        <div class="card-header">
            <div class="d-flex align-items-center gap-2">
                <div class="stat-icon warning" style="width: 36px; height: 36px;">
                    <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <rect x="4" y="4" width="16" height="16" rx="2" ry="2"></rect>
                        <circle cx="9" cy="9" r="2"></circle>
                        <circle cx="15" cy="9" r="2"></circle>
                        <path d="M9 15h6"></path>
                    </svg>
                </div>
                <div>
                    <h3 class="card-title mb-0">Tape Archive System</h3>
                    <span class="fs-xs text-muted">Tape Storage</span>
                </div>
            </div>
            <span class="status-badge status-active">Healthy</span>
        </div>
        <div class="card-body">
            <div class="d-flex justify-content-between mb-2">
                <span class="text-secondary fs-sm">Library</span>
                <span class="fw-bold">LTO-8 Tape Library</span>
            </div>
            <div class="d-flex justify-content-between mb-2">
                <span class="text-secondary fs-sm">Used / Quota</span>
                <span class="fw-bold">120 GB / 1 TB</span>
            </div>
            <div class="progress-bar mb-2">
                <div class="progress-fill" style="width: 12%; background: var(--warning-color);"></div>
            </div>
            <div class="d-flex justify-content-between mb-2">
                <span class="text-secondary fs-sm">Archive Plans</span>
                <span class="fw-bold">1</span>
            </div>
            <div class="d-flex justify-content-between mb-2">
                <span class="text-secondary fs-sm">Status</span>
                <span class="text-success fw-bold">Online</span>
            </div>
            <div class="d-flex justify-content-between">
                <span class="text-secondary fs-sm">Last Check</span>
                <span>5 minutes ago</span>
            </div>
        </div>
        <div class="card-footer d-flex justify-content-between">
            <button class="btn btn-sm btn-outline">Test Connection</button>
            <div class="d-flex gap-1">
                <button class="btn btn-sm btn-outline">Edit</button>
                <button class="btn btn-sm btn-outline">View Details</button>
            </div>
        </div>
    </div>
</div>
