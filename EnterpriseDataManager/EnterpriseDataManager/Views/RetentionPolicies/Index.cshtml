@{
    ViewData["Title"] = "Retention Policies";
}

<!-- Page Header -->
<div class="page-header">
    <div>
        <h1 class="page-title">Retention Policies</h1>
        <p class="page-subtitle">Define how long archived data should be kept</p>
    </div>
    <div class="page-actions">
        <a asp-action="Create" class="btn btn-primary">
            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <line x1="12" y1="5" x2="12" y2="19"></line>
                <line x1="5" y1="12" x2="19" y2="12"></line>
            </svg>
            Create Policy
        </a>
    </div>
</div>

<!-- Info Alert -->
<div class="alert alert-info mb-3">
    <div class="alert-icon">
        <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <circle cx="12" cy="12" r="10"></circle>
            <line x1="12" y1="16" x2="12" y2="12"></line>
            <line x1="12" y1="8" x2="12.01" y2="8"></line>
        </svg>
    </div>
    <div class="alert-content">
        <div class="alert-title">Retention Policy Enforcement</div>
        <div>Retention policies are automatically enforced by the system. Archives that exceed their retention period will be marked for deletion during the next cleanup cycle.</div>
    </div>
</div>

<!-- Policies Table -->
<div class="card">
    <div class="card-header">
        <h3 class="card-title">All Retention Policies</h3>
        <span class="fs-sm text-secondary">4 policies defined</span>
    </div>
    <div class="table-container">
        <table class="data-table">
            <thead>
                <tr>
                    <th>Policy Name</th>
                    <th>Retention Period</th>
                    <th>Legal Hold</th>
                    <th>Immutable</th>
                    <th>Scope</th>
                    <th>Archive Plans</th>
                    <th>Created</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>
                        <div class="fw-bold">Standard Retention</div>
                        <div class="fs-xs text-muted">Default policy for general archives</div>
                    </td>
