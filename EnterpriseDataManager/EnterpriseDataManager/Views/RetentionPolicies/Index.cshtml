<!-- Policy Statistics -->
<div class="grid-3 mt-3">
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Archives by Policy</h3>
        </div>
        <div class="card-body">
            <div class="d-flex justify-content-between align-items-center py-2" style="border-bottom: 1px solid var(--border-light)">
                <span>Standard (90 days)</span>
                <span class="fw-bold">524 archives</span>
            </div>
            <div class="d-flex justify-content-between align-items-center py-2" style="border-bottom: 1px solid var(--border-light)">
                <span>Extended (1 year)</span>
                <span class="fw-bold">312 archives</span>
            </div>
            <div class="d-flex justify-content-between align-items-center py-2" style="border-bottom: 1px solid var(--border-light)">
                <span>Long Term (7 years)</span>
                <span class="fw-bold">89 archives</span>
            </div>
            <div class="d-flex justify-content-between align-items-center py-2">
                <span>Legal Hold</span>
                <span class="fw-bold">15 archives</span>
            </div>
        </div>
    </div>

    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Upcoming Expirations</h3>
        </div>
        <div class="card-body">
            <div class="d-flex justify-content-between align-items-center py-2" style="border-bottom: 1px solid var(--border-light)">
                <span>Next 7 days</span>
                <span class="fw-bold text-warning">45 archives</span>
            </div>
            <div class="d-flex justify-content-between align-items-center py-2" style="border-bottom: 1px solid var(--border-light)">
                <span>Next 30 days</span>
                <span class="fw-bold">128 archives</span>
            </div>
            <div class="d-flex justify-content-between align-items-center py-2" style="border-bottom: 1px solid var(--border-light)">
                <span>Next 90 days</span>
                <span class="fw-bold">312 archives</span>
            </div>
            <div class="d-flex justify-content-between align-items-center py-2">
                <span>Total expiring this year</span>
                <span class="fw-bold">524 archives</span>
            </div>
        </div>
    </div>

    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Storage Impact</h3>
        </div>
        <div class="card-body">
            <div class="d-flex justify-content-between align-items-center py-2" style="border-bottom: 1px solid var(--border-light)">
                <span>Under retention</span>
                <span class="fw-bold">2.1 TB</span>
            </div>
            <div class="d-flex justify-content-between align-items-center py-2" style="border-bottom: 1px solid var(--border-light)">
                <span>Pending deletion</span>
                <span class="fw-bold text-warning">156 GB</span>
            </div>
            <div class="d-flex justify-content-between align-items-center py-2" style="border-bottom: 1px solid var(--border-light)">
                <span>Legal hold</span>
                <span class="fw-bold">89 GB</span>
            </div>
            <div class="d-flex justify-content-between align-items-center py-2">
                <span>Immutable storage</span>
                <span class="fw-bold">412 GB</span>
            </div>
        </div>
    </div>
</div>
