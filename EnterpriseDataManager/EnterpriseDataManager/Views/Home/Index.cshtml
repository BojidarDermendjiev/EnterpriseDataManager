@{
    ViewData["Title"] = "Dashboard";
}

<!-- Page Header -->
<div class="page-header">
    <div>
        <h1 class="page-title">Dashboard</h1>
        <p class="page-subtitle">Overview of your enterprise data management</p>
    </div>
    <div class="page-actions">
        <button class="btn btn-secondary">
            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"></path>
                <polyline points="7 10 12 15 17 10"></polyline>
                <line x1="12" y1="15" x2="12" y2="3"></line>
            </svg>
            Export Report
        </button>
        <button class="btn btn-primary">
            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <line x1="12" y1="5" x2="12" y2="19"></line>
                <line x1="5" y1="12" x2="19" y2="12"></line>
            </svg>
            New Archive Plan
        </button>
    </div>
</div>

<!-- Stats Cards -->
<div class="stats-grid">
    <div class="stat-card">
        <div class="stat-header">
            <div class="stat-icon primary">
                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"></path>
                    <polyline points="14 2 14 8 20 8"></polyline>
                </svg>
            </div>
            <span class="stat-trend up">+12%</span>
        </div>
        <div class="stat-value">24</div>
        <div class="stat-label">Active Archive Plans</div>
    </div>

    <div class="stat-card">
        <div class="stat-header">
            <div class="stat-icon success">
                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <polyline points="20 6 9 17 4 12"></polyline>
                </svg>
            </div>
            <span class="stat-trend up">+8%</span>
        </div>
        <div class="stat-value">1,247</div>
        <div class="stat-label">Completed Jobs</div>
    </div>

    <div class="stat-card">
        <div class="stat-header">
            <div class="stat-icon warning">
                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <circle cx="12" cy="12" r="10"></circle>
                    <polyline points="12 6 12 12 16 14"></polyline>
                </svg>
            </div>
        </div>
        <div class="stat-value">3</div>
        <div class="stat-label">Running Jobs</div>
    </div>

    <div class="stat-card">
        <div class="stat-header">
            <div class="stat-icon info">
                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <ellipse cx="12" cy="5" rx="9" ry="3"></ellipse>
                    <path d="M21 12c0 1.66-4 3-9 3s-9-1.34-9-3"></path>
                    <path d="M3 5v14c0 1.66 4 3 9 3s9-1.34 9-3V5"></path>
                </svg>
            </div>
        </div>
        <div class="stat-value">2.4 TB</div>
        <div class="stat-label">Total Archived Data</div>
    </div>
</div>

<!-- Main Content Grid -->
<div class="grid-2">
    <!-- Running Jobs -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Running Jobs</h3>
            <a href="#" class="btn btn-sm btn-outline">View All</a>
        </div>
        <div class="card-body">
            <div class="mb-3">
                <div class="d-flex justify-content-between align-items-center mb-1">
                    <span class="fw-bold">Daily Backup - Production DB</span>
                    <span class="status-badge status-running">Running</span>
                </div>
                <div class="d-flex justify-content-between align-items-center fs-sm text-secondary mb-1">
                    <span>Progress: 67%</span>
                    <span>1.2 GB / 1.8 GB</span>
                </div>
                <div class="progress-bar">
                    <div class="progress-fill" style="width: 67%"></div>
                </div>
            </div>

            <div class="mb-3">
                <div class="d-flex justify-content-between align-items-center mb-1">
                    <span class="fw-bold">Weekly Archive - User Documents</span>
                    <span class="status-badge status-running">Running</span>
                </div>
                <div class="d-flex justify-content-between align-items-center fs-sm text-secondary mb-1">
                    <span>Progress: 34%</span>
                    <span>450 MB / 1.3 GB</span>
                </div>
                <div class="progress-bar">
                    <div class="progress-fill" style="width: 34%"></div>
                </div>
            </div>

            <div>
                <div class="d-flex justify-content-between align-items-center mb-1">
                    <span class="fw-bold">Monthly Archive - Email Server</span>
                    <span class="status-badge status-scheduled">Scheduled</span>
                </div>
                <div class="d-flex justify-content-between align-items-center fs-sm text-secondary mb-1">
                    <span>Starts in: 2h 15m</span>
                    <span>Est. 5.2 GB</span>
                </div>
                <div class="progress-bar">
                    <div class="progress-fill" style="width: 0%"></div>
                </div>
            </div>
        </div>
    </div>

    <!-- Storage Overview -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Storage Overview</h3>
            <a href="#" class="btn btn-sm btn-outline">Manage</a>
        </div>
        <div class="card-body">
            <div class="d-flex justify-content-between align-items-center mb-2">
                <span class="fs-sm text-secondary">Total Capacity</span>
                <span class="fw-bold">10 TB</span>
            </div>
            <div class="d-flex justify-content-between align-items-center mb-2">
                <span class="fs-sm text-secondary">Used</span>
                <span class="fw-bold">2.4 TB (24%)</span>
            </div>
            <div class="storage-usage">
                <div class="storage-bar">
                    <div class="storage-segment local" style="width: 40%"></div>
                    <div class="storage-segment s3" style="width: 35%"></div>
                    <div class="storage-segment azure" style="width: 20%"></div>
                    <div class="storage-segment tape" style="width: 5%"></div>
                </div>
                <div class="storage-legend">
                    <div class="storage-legend-item">
                        <div class="storage-legend-color" style="background: var(--primary-color)"></div>
                        <span>Local (960 GB)</span>
                    </div>
                    <div class="storage-legend-item">
                        <div class="storage-legend-color" style="background: var(--info-color)"></div>
                        <span>S3 (840 GB)</span>
                    </div>
                    <div class="storage-legend-item">
                        <div class="storage-legend-color" style="background: var(--success-color)"></div>
                        <span>Azure (480 GB)</span>
                    </div>
                    <div class="storage-legend-item">
                        <div class="storage-legend-color" style="background: var(--warning-color)"></div>
                        <span>Tape (120 GB)</span>
                    </div>
                </div>
            </div>

            <div class="mt-3">
                <h4 class="fs-sm fw-bold mb-2">Storage Providers</h4>
                <div class="d-flex justify-content-between align-items-center py-2" style="border-bottom: 1px solid var(--border-light)">
                    <div class="d-flex align-items-center gap-1">
                        <span class="status-badge status-active">Healthy</span>
                        <span>Primary NAS Storage</span>
                    </div>
                    <span class="text-secondary fs-sm">Local</span>
                </div>
                <div class="d-flex justify-content-between align-items-center py-2" style="border-bottom: 1px solid var(--border-light)">
                    <div class="d-flex align-items-center gap-1">
                        <span class="status-badge status-active">Healthy</span>
                        <span>AWS S3 - us-east-1</span>
                    </div>
                    <span class="text-secondary fs-sm">S3</span>
                </div>
                <div class="d-flex justify-content-between align-items-center py-2">
                    <div class="d-flex align-items-center gap-1">
                        <span class="status-badge status-active">Healthy</span>
                        <span>Azure Blob - West Europe</span>
                    </div>
                    <span class="text-secondary fs-sm">Azure</span>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Recent Activity & Quick Actions -->
<div class="grid-2 mt-3">
    <!-- Recent Activity -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Recent Activity</h3>
            <a href="#" class="btn btn-sm btn-outline">View Audit Log</a>
        </div>
        <div class="card-body">
            <ul class="activity-list">
                <li class="activity-item">
                    <div class="activity-icon archive">
                        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <rect x="2" y="7" width="20" height="14" rx="2" ry="2"></rect>
                            <path d="M16 21V5a2 2 0 0 0-2-2h-4a2 2 0 0 0-2 2v16"></path>
                        </svg>
                    </div>
                    <div class="activity-content">
                        <div class="activity-title">Archive job completed</div>
                        <div class="activity-description">Daily Backup - Customer Data archived successfully (2.1 GB)</div>
                        <div class="activity-time">15 minutes ago</div>
                    </div>
                </li>
                <li class="activity-item">
                    <div class="activity-icon recovery">
                        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <polyline points="1 4 1 10 7 10"></polyline>
                            <path d="M3.51 15a9 9 0 1 0 2.13-9.36L1 10"></path>
                        </svg>
                    </div>
                    <div class="activity-content">
                        <div class="activity-title">Recovery initiated</div>
                        <div class="activity-description">Admin user started recovery for Financial Reports Q3</div>
                        <div class="activity-time">1 hour ago</div>
                    </div>
                </li>
                <li class="activity-item">
                    <div class="activity-icon storage">
                        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <ellipse cx="12" cy="5" rx="9" ry="3"></ellipse>
                            <path d="M21 12c0 1.66-4 3-9 3s-9-1.34-9-3"></path>
                            <path d="M3 5v14c0 1.66 4 3 9 3s9-1.34 9-3V5"></path>
                        </svg>
                    </div>
                    <div class="activity-content">
                        <div class="activity-title">Storage provider added</div>
                        <div class="activity-description">New Azure Blob storage connected to the system</div>
                        <div class="activity-time">3 hours ago</div>
                    </div>
                </li>
                <li class="activity-item">
                    <div class="activity-icon alert">
                        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <path d="M10.29 3.86L1.82 18a2 2 0 0 0 1.71 3h16.94a2 2 0 0 0 1.71-3L13.71 3.86a2 2 0 0 0-3.42 0z"></path>
                            <line x1="12" y1="9" x2="12" y2="13"></line>
                            <line x1="12" y1="17" x2="12.01" y2="17"></line>
                        </svg>
                    </div>
                    <div class="activity-content">
                        <div class="activity-title">Retention policy triggered</div>
                        <div class="activity-description">45 archives expired and scheduled for deletion</div>
                        <div class="activity-time">Yesterday</div>
                    </div>
                </li>
            </ul>
        </div>
    </div>

    <!-- Upcoming Scheduled Jobs -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Upcoming Scheduled Jobs</h3>
            <a href="#" class="btn btn-sm btn-outline">View Schedule</a>
        </div>
        <div class="card-body">
            <div class="table-container">
                <table class="data-table">
                    <thead>
                        <tr>
                            <th>Archive Plan</th>
                            <th>Next Run</th>
                            <th>Priority</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>
                                <div class="fw-bold">Daily Backup - Production DB</div>
                                <div class="fs-xs text-muted">Every day at 2:00 AM</div>
                            </td>
                            <td>
                                <div>Tomorrow</div>
                                <div class="fs-xs text-muted">02:00 AM</div>
                            </td>
                            <td><span class="priority-high">High</span></td>
                        </tr>
                        <tr>
                            <td>
                                <div class="fw-bold">Weekly - User Documents</div>
                                <div class="fs-xs text-muted">Every Sunday at 1:00 AM</div>
                            </td>
                            <td>
                                <div>In 3 days</div>
                                <div class="fs-xs text-muted">01:00 AM</div>
                            </td>
                            <td><span class="priority-normal">Normal</span></td>
                        </tr>
                        <tr>
                            <td>
                                <div class="fw-bold">Monthly - Email Archives</div>
                                <div class="fs-xs text-muted">1st of every month</div>
                            </td>
                            <td>
                                <div>In 12 days</div>
                                <div class="fs-xs text-muted">03:00 AM</div>
                            </td>
                            <td><span class="priority-normal">Normal</span></td>
                        </tr>
                        <tr>
                            <td>
                                <div class="fw-bold">Quarterly - Financial Data</div>
                                <div class="fs-xs text-muted">Start of each quarter</div>
                            </td>
                            <td>
                                <div>In 45 days</div>
                                <div class="fs-xs text-muted">12:00 AM</div>
                            </td>
                            <td><span class="priority-critical">Critical</span></td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

